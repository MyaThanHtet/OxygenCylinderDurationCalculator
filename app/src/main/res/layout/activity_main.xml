<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_oxygen_calculator"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true">
<!--<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:src="@drawable/ic_baseline_info_24"
    android:layout_margin="10dp"/>-->

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="အောက်စီဂျင်"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/sub_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ဘယ်လောက်ခံဦးမလဲ"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tv" />
    <TextView
        android:id="@+id/tank_pressure_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:paddingBottom="10dp"
        android:text="Tank Pressure ကိုထည့်ပါ (psi)"
        android:textColor="#FFFCFC"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/input_tank_pressure"
        app:layout_constraintTop_toBottomOf="@+id/sub_title_tv" />

    <EditText
        android:id="@+id/input_tank_pressure"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_tank_pressure_edt"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:maxLines="1"
        android:inputType="number"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tank_pressure_hint_tv" />

    <TextView
        android:id="@+id/tank_size_spinner_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingBottom="10dp"
        android:text="အောက်စီဂျင်ဘူး အရွယ်အစားကို ရွေးပါ"
        android:textColor="#FFFCFC"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/input_tank_pressure"
        app:layout_constraintTop_toBottomOf="@+id/input_tank_pressure" />


    <RelativeLayout
        android:id="@+id/spinner_parent"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginRight="3dp"
        android:layout_weight=".28"
        android:background="@drawable/spinner_bg"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/tank_size_spinner_hint"
        app:layout_constraintTop_toBottomOf="@+id/tank_size_spinner_hint">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/tank_size_spinner"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:spinnerMode="dropdown"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_arrow_drop_down_24" />

    </RelativeLayout>
    <TextView
        android:id="@+id/oxygen_flow_rate_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingBottom="10dp"
        android:text="အောက်စီဂျင် Flow Rate ( L/min)"
        android:textColor="#FFFCFC"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_parent" />
    <com.xw.repo.BubbleSeekBar
        android:id="@+id/bubbleSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:bsb_bubble_color="#303F9F"
        app:bsb_bubble_text_color="@color/white"
        app:bsb_max="15"
        app:bsb_min="0"
        app:bsb_progress="5"
        app:bsb_second_track_color="#303F9F"
        app:bsb_section_count="15"
        app:bsb_section_text_position="bottom_sides"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        app:bsb_track_color="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/oxygen_flow_rate_hint"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_result_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bubbleSeekBar"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center"
        >
<TextView
    android:id="@+id/display_result"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:textSize="40sp"
    android:textColor="@color/white"
    android:layout_gravity="center_horizontal"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="သာကျန်ပါတော့သည်။"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>